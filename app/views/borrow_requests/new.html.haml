= bootstrap_form_for(@borrow_request,
  url: user_book_borrow_requests_path(requester_id: current_user.id)) do |f|
  .field
    = f.text_field :borrow_start, class: 'datepicker',
      label: 'Start des Verleihs', required: true
  .field
    = f.text_field :borrow_end, class: 'datepicker',
      label: 'Verleih bis', required: true
  .dropdown
    /%div.btn.btn-default#dropdown-login.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
    /  Ort zum Austauschen
    /  %span.caret
    /%ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
    /  - @places.each do |place|
    /    %li
    /      = link_to "#{place.name}", new_book_path, class: 'linked-none'

    %select{:name => "places"}
      %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
        - @places.each do |place|
          %li
            %option{:value => "place1"}
              = link_to "#{place.name}", new_book_path, class: 'linked-none'

  .actions
    = f.submit "Anfragen"
