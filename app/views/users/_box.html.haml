= link_to user_path(user) do
  .user-box
    .row
      .col-xs-3.col-sm-2.max-width-80
        = image_tag 'user_dummy.jpg', class: "img-responsive"
      .col-xs-7.col-sm-7
        .row
          .center-block
            %p.user-name
              = user.name
            %p
              =fa_icon "at",class: "emphatized"
              = user.email
      .col-xs-12.col-sm-3.button-group
        = link_to user_books_path(user) do
          %button.btn.btn-primary
            Show Books
        - if @book
          = link_to '/' do
            %button.btn.btn-primary
              Rent now
