.row.margin-top-10
  .col-md-4#book-img
    =image_tag @book.image_link, class:"thumbnail"
  .col-md-8
    .panel.panel-primary
      .panel-heading
        %h4
          = @book.title
      .panel-body
        %h4
          .row
            .col-md-3.padding-10
              %strong
                Authors:
            .col-md-9.padding-10
              = @book.authors.join(', ')
            .col-md-3.padding-10
              %strong
                Pages:
            .col-md-9.padding-10
              = @book.pages
            .col-md-3.padding-10
              %strong
                Description:
            .col-md-9.padding-10
              = @book.description

%hr
.row
  .col-xs-10
    %h4
      People owning this book:
  .col-xs-2
    = link_to book_owners_path(@book) do
      .btn.btn-primary.full-width
        Show all

.margin-top-10
  - @book.owners.first(2).each do |owner|
    = render 'users/box', user: owner

=link_to "To all books", books_path
